<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F5F6FA"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Cabeçalho azul -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:orientation="horizontal"
        android:background="#1E3A8A"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgLogoTecplus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tecpluswhite"
            android:contentDescription="Logo TecPlus"
            android:scaleType="fitCenter" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_person_24"
            android:tint="#FFFFFF"
            android:contentDescription="Perfil"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Bloco Abre Chamado (clicável) -->
    <LinearLayout
        android:id="@+id/layoutAbrirChamado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E7FF"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir Chamado"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E3A8A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use esta opção para registrar um novo problema e solicite suporte."
            android:textSize="14sp"
            android:textColor="#4B5563"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Bloco Meus Chamados (clicável) -->
    <LinearLayout
        android:id="@+id/layoutMeusChamados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E7FF"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meus Chamados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E3A8A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acompanhe o status dos seus chamados abertos."
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Lista inicial invisível -->
    <ListView
        android:id="@+id/listViewChamados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>

</LinearLayout>
