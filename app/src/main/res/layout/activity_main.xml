<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="#F5F6FA">

    <ImageView
        android:id="@+id/imgLogoTecplus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/tecplus" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:backgroundTint="#0A1F44"
        android:textColor="#2E2E2E"
        android:textColorHint="#bbbbbb"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Campo de senha + ícone na mesma linha -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:backgroundTint="#0A1F44"
            android:textColor="#2E2E2E"
            android:textColorHint="#bbbbbb"
            android:padding="12dp"
            android:inputType="textPassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/ivToggleSenhaAtual"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@id/editTextPassword"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_eye_off"
            android:tint="#bbbbbb"
            android:contentDescription="Mostrar senha"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0078FF"
        android:padding="14dp"
        android:textAllCaps="false" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkboxRememberLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lembrar login"
        android:textColor="#2E2E2E"
        android:layout_marginTop="12dp"
        style="@style/Widget.Material3.CompoundButton.CheckBox"
        app:buttonTint="@color/checkbox_color" />

    <TextView
        android:id="@+id/textCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não tem uma conta?\n   Cadastre-se aqui"
        android:textColor="#0078FF"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="5dp" />

</LinearLayout>
