<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Novo Cadastro"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0078FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/editNovoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="#2E2E2E"
        android:backgroundTint="#0A1F44"
        android:textColorHint="#bbbbbb"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="12dp"/>

    <!-- Campo Senha com ícone -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/editNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:textColor="#2E2E2E"
            android:backgroundTint="#0A1F44"
            android:textColorHint="#bbbbbb"
            android:inputType="textPassword"
            android:paddingEnd="40dp"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/ivToggleNovaSenha"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@id/editNovaSenha"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_eye_off"
            android:tint="#bbbbbb"
            android:contentDescription="Mostrar senha"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <!-- Campo Confirmar Senha com ícone -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/editConfirmarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Senha"
            android:textColor="#2E2E2E"
            android:backgroundTint="#0A1F44"
            android:textColorHint="#bbbbbb"
            android:inputType="textPassword"
            android:paddingEnd="40dp"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/ivToggleConfirmarSenha"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@id/editConfirmarSenha"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_eye_off"
            android:tint="#bbbbbb"
            android:contentDescription="Mostrar senha"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonCadastrarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0078FF"
        android:padding="12dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/buttonCancelarCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textColor="#0078FF"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:textAllCaps="false"/>
</LinearLayout>
